---
import Layout from '../layouts/Layout.astro';
import { useStoryblokApi } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const storyblokApi = useStoryblokApi()

const { data } = await storyblokApi.get('cdn/stories', {
	version: 'draft',
})
let stories = data.stories
stories = Object.values(stories)
stories = stories.map((story) => {
  return {
    params: {
      name: story.name,
      slug: story.slug,
      thumbnail: story.content.thumbnail,
    },
  }
})
---

<Layout title="K-12 Education - Leventhal Map & Education Center at the Boston Public Library">
  <h1 class="text-4xl font-bold mb-6">Featured lesson plans</h1>
  <ul class="flex gap-y-6 flex-wrap -mx-3">
  {stories.map(story => (
    <li class="block w-full px-3 sm:w-1/2 md:w-1/3">
      <a
        class="block rounded-xl overflow-hidden w-full shadow-md transition-shadow duraiton-300 hover:shadow-xl"
        href={`/lesson-plans/${story.params.slug}`}
      >
        <div class="relative w-full aspect-video bg-black">
          {story.params.thumbnail?.filename &&
            <img
              class="absolute inset-0 w-full h-full object-cover object-center"
              src={story.params.thumbnail?.filename}
              alt={story.params.thumbnail?.alt}
            />
          }
        </div>
        <span class="block font-bold text-lg p-5">
          {story.params.name}
        </span>
      </a>
    </li>
  ))}
  </ul>
</Layout>
